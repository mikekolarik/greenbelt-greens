<section class="col-sm-6 col-sm-offset-3">
  <div class="page-header text-center">
    <h2>Password Reset</h2>
  </div>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>
  <form>
    <div class="form-group">
      <label class="m-text-uppercase-12">please, enter your email</label>
      <%= f.email_field :email, autofocus: true,
                                class: "form-control email-search",
                                type: "text",
                                placeholder: "exampla@gmail.com" %>
    </div>

    <div class="form-group text-left">
      <div class="col-xs-offset-1 col-sm-offset-1 col-lg-offset-1">
        <%= f.submit "Send", class: "m-button-submit"%>
      </div>
    </div>
  </form>
<% end %>
</section>
